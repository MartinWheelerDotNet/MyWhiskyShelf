{
  "realm": "mywhiskyshelf",
  "enabled": true,
  "roles": {
    "realm": [
      { "name": "admin" },
      { "name": "user" }
    ]
  },
  "clients": [
    {
      "clientId": "mywhiskyshelf-api",
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": false,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false
    },
    {
      "clientId": "mywhiskyshelf-admin-client",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "admin-secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "protocolMappers": [
        {
          "name": "audience-mywhiskyshelf-api",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "mywhiskyshelf-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        },
        {
          "name": "hardcoded-role-admin",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-hardcoded-claim-mapper",
          "config": {
            "claim.name": "roles",
            "claim.value": "admin",
            "jsonType.label": "String",
            "multivalued": "true",
            "id.token.claim": "false",
            "userinfo.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "mywhiskyshelf-user-client",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "user-secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "protocolMappers": [
        {
          "name": "audience-mywhiskyshelf-api",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "mywhiskyshelf-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        },
        {
          "name": "hardcoded-role-user",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-hardcoded-claim-mapper",
          "config": {
            "claim.name": "roles",
            "claim.value": "user",
            "jsonType.label": "String",
            "multivalued": "true",
            "id.token.claim": "false",
            "userinfo.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ]
}