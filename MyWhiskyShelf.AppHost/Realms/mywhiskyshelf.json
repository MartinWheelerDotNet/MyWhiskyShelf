{
  "realm": "mywhiskyshelf",
  "enabled": true,
  "registrationAllowed": true,
  "loginWithEmailAllowed": true,
  "resetPasswordAllowed": true,
  "verifyEmail": false,
  "components": {
    "org.keycloak.userprofile.UserProfileProvider": [
      {
        "name": "declarative-user-profile",
        "providerId": "declarative-user-profile",
        "subComponents": {},
        "config": {
          "kc.user.profile.config": [
            "{\"attributes\":[{\"name\":\"username\",\"displayName\":\"Username\",\"required\":{\"roles\":[\"user\"]},\"permissions\":{\"view\":[\"admin\",\"user\"],\"edit\":[\"admin\",\"user\"]},\"validations\":{\"length\":{\"min\":3,\"max\":255},\"username-prohibited-characters\":{}}},{\"name\":\"email\",\"displayName\":\"Email\",\"required\":{\"roles\":[\"user\"]},\"permissions\":{\"view\":[\"admin\",\"user\"],\"edit\":[\"admin\",\"user\"]},\"validations\":{\"email\":{}}},{\"name\":\"firstName\",\"displayName\":\"First name\",\"required\":{\"roles\":[\"user\"]},\"permissions\":{\"view\":[\"admin\",\"user\"],\"edit\":[\"admin\",\"user\"]}},{\"name\":\"lastName\",\"displayName\":\"Last name\",\"required\":{\"roles\":[\"user\"]},\"permissions\":{\"view\":[\"admin\",\"user\"],\"edit\":[\"admin\",\"user\"]}}]}"
          ]
        }
      }
    ]
  },
  "defaultDefaultClientScopes": [
    "roles",
    "web-origins",
    "acr",
    "profile",
    "email"
  ],
  "defaultOptionalClientScopes": [
    "address",
    "phone",
    "offline_access",
    "microprofile-jwt"
  ],


  "roles": {
    "realm": [
      { "name": "admin" },
      { "name": "user" }
    ]
  },
  "groups": [
    {
      "name": "users",
      "realmRoles": ["user"]
    }
  ],
  "defaultGroups": ["/users"],
  "clients": [
    {
      "clientId": "mywhiskyshelf-api",
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": false,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false
    },
    {
      "clientId": "mywhiskyshelf-admin-client",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "admin-secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "protocolMappers": [
        {
          "name": "audience-mywhiskyshelf-api",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "mywhiskyshelf-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        },
        {
          "name": "hardcoded-role-admin",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-hardcoded-claim-mapper",
          "config": {
            "claim.name": "roles",
            "claim.value": "admin",
            "jsonType.label": "String",
            "multivalued": "true",
            "id.token.claim": "false",
            "userinfo.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "mywhiskyshelf-user-client",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "user-secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "protocolMappers": [
        {
          "name": "audience-mywhiskyshelf-api",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "mywhiskyshelf-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        },
        {
          "name": "hardcoded-role-user",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-hardcoded-claim-mapper",
          "config": {
            "claim.name": "roles",
            "claim.value": "user",
            "jsonType.label": "String",
            "multivalued": "true",
            "id.token.claim": "false",
            "userinfo.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "mywhiskyshelf-frontend",
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "post.logout.redirect.uris": "+"
      },
      "redirectUris": ["http://localhost:5173/*"],
      "webOrigins": ["http://localhost:5173"],
      "rootUrl": "http://localhost",
      "baseUrl": "/",
      "protocolMappers": [
        {
          "name": "audience-mywhiskyshelf-api",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "mywhiskyshelf-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ]
}
